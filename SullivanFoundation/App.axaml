<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:view="clr-namespace:SullivanFoundation"
             x:Class="SullivanFoundation.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="/Styles/AppDeafultStyles.axaml" />
    </Application.Styles>

	<Application.DataTemplates>
		<view:ViewLocator/>
	</Application.DataTemplates>

	<Application.Resources>

		<FontFamily x:Key="Montserrat">avares://SullivanFoundation/Assets/Fonts#Montserrat</FontFamily>
		<FontFamily x:Key="Phosphor">avares://SullivanFoundation/Assets/Fonts#Phosphor</FontFamily>
		<FontFamily x:Key="PhosphorFill">avares://SullivanFoundation/Assets/Fonts#Phosphor-Fill</FontFamily>

		<LinearGradientBrush x:Key="PrimaryBackgroundGradient"
							 StartPoint="0%, 0%"
							 EndPoint="100%,0%">
			<GradientStop Offset="0" Color="#136051"/>
			<GradientStop Offset="0" Color="#001212"/>
		</LinearGradientBrush>
		


		<SolidColorBrush x:Key="BackgroundColor" Color="#DAE1DF"/>
		<SolidColorBrush x:Key="ForegroundColor" Color="#001212"/>
		<SolidColorBrush x:Key="ActiveBackground" Color="#136051"/>
		
	</Application.Resources>
</Application>
